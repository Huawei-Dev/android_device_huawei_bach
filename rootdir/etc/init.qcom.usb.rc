on post-fs-data
    chown system system /sys/class/android_usb/android0/f_mass_storage/lun/file
    chmod 0660 /sys/class/android_usb/android0/f_mass_storage/lun/file
    chown system system /sys/class/android_usb/android0/f_rndis/ethaddr
    chmod 0660 /sys/class/android_usb/android0/f_rndis/ethaddr
    write /sys/class/android_usb/android0/iManufacturer ${ro.product.manufacturer}
    write /sys/class/android_usb/android0/iProduct ${ro.product.model}

on boot
    setprop sys.usb.configfs 0
    restorecon /sys/class/android_usb/android0/release_wakelock
    chown root system /sys/class/android_usb/android0/release_wakelock
    write /sys/kernel/debug/dynamic_debug/control "file dwc3-msm.c +pm"
    write /sys/kernel/debug/dynamic_debug/control "file phy-msm-qusb.c +pm"
    write /sys/kernel/debug/dynamic_debug/control "file hub.c +pm"
    write /sys/kernel/debug/dynamic_debug/control "file xhci.c +pm"
    write /sys/kernel/debug/dynamic_debug/control "file xhci-hcd.c +pm"
    write /sys/kernel/debug/dynamic_debug/control "file xhci-hub.c +pm"
    write /sys/kernel/debug/dynamic_debug/control "file xhci-plat.c +pm"
    write /sys/kernel/debug/dynamic_debug/control "file xhci-ring.c +pm"
    write /sys/kernel/debug/dynamic_debug/control "file hcd.c +pm"
    write /sys/module/g_android/parameters/usb_debug 3

on init
    write /sys/class/android_usb/android0/f_rndis/wceis 1
    chown system system /sys/class/android_usb/android0/switch_request
    chmod 0664 /sys/class/android_usb/android0/switch_request
    chown system system /sys/class/usbswitch/usbsw/swstate
    setprop persist.service.hdb.enable true

on fs
    mkdir /dev/usb-ffs 0770 shell shell
    mkdir /dev/usb-ffs/adb 0770 shell shell
    mount functionfs adb /dev/usb-ffs/adb uid=2000,gid=2000
    write /sys/class/android_usb/android0/f_ffs/aliases adb
    mkdir /dev/usb-ffs/hdb 0770 shell shell
    mount functionfs_hdb hdb /dev/usb-ffs/hdb uid=2000,gid=2000

# Used to disable USB when switching states
on property:sys.usb.config=none && property:sys.usb.configfs=0
    stop adbd
    stop hdbd
    write /sys/class/android_usb/android0/enable 0
    write /sys/class/android_usb/android0/bDeviceClass 0
    setprop sys.usb.state ${sys.usb.config}

